<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragment.FirstFragment"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="测试Fresco"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fresco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            app:placeholderImage="@mipmap/ic_launcher"
            />

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/test"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="5000"
            fresco:failureImage="@drawable/ic_launcher_foreground"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/ic_launcher_background"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarAutoRotateInterval="5000"
            fresco:progressBarImage="@drawable/load"
            fresco:progressBarImageScaleType="centerCrop"
            fresco:retryImage="@mipmap/ic_launcher"
            fresco:retryImageScaleType="centerCrop"
            fresco:backgroundImage="@color/cardview_dark_background"
            fresco:overlayImage="@drawable/timg"
            fresco:roundAsCircle="false"
            fresco:viewAspectRatio="1"
            fresco:pressedStateOverlayImage="@color/cardview_shadow_end_color"
            fresco:roundedCornerRadius="20dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="false"
            fresco:roundBottomLeft="false"
            fresco:roundBottomRight="true"
            fresco:roundWithOverlayColor="@color/cardview_dark_background"
            fresco:roundingBorderWidth="2dp"
            fresco:roundingBorderColor="@color/cardview_shadow_start_color"
            />

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/controller"
            android:layout_width="150dp"
            android:layout_height="150dp"
            fresco:placeholderImage="@drawable/load"
            />

    <Button
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="点击加载图片"
            />

    <TextView
            android:id="@+id/test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="结合交换空间环境"
            android:layout_gravity="center_horizontal"
            />
    <Button
            android:id="@+id/load_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为Textview加载四周图"
            android:layout_gravity="center_horizontal"
            />
    <TextView
            android:id="@+id/spannable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="28sp"
            tools:text="SpannableStringBuilder"/>
</LinearLayout>