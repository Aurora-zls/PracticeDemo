<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/green_light"
        >

    <ImageView
            android:id="@+id/notif_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@color/black_transparent_50"
            android:contentDescription="@string/app_name"
            android:src="@drawable/music"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/notif_img"
            android:orientation="vertical"
            >

        <TextView
                android:id="@+id/notif_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="测试自定义通知"
                android:textColor="@color/white"
                android:textSize="15sp"
                />

        <TextView
                android:id="@+id/notif_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="暂停播放"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

            <ImageView
                    android:id="@+id/notif_last"
                    android:layout_width="44dp"
                    android:layout_height="33dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/jz_backward_icon"
                    />

            <ImageView
                    android:id="@+id/notif_play"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_marginHorizontal="20dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/jz_play_normal"
                    />

            <ImageView
                    android:id="@+id/notif_next"
                    android:layout_width="44dp"
                    android:layout_height="33dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/jz_forward_icon"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/notif_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="天下有情人"
                android:textColor="@color/white"
                android:textSize="18sp"
                />

        <TextView
                android:id="@+id/notif_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="成功展开通知，解锁更多样式"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
    </LinearLayout>
</RelativeLayout>