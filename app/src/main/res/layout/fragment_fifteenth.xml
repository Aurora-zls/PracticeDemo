<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <com.example.zls.widget.custom_view.BlinkLayout
                android:id="@+id/blink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

            <com.example.zls.widget.custom_view.shape_view.ShapeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="测试blink layout"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:corner_radius="10dp"
                    app:solid_color="@color/green_light"
                    />
        </com.example.zls.widget.custom_view.BlinkLayout>

        <com.example.zls.widget.custom_view.shape_view.ShapeTextView
                android:id="@+id/messenger1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="测试messager 1-->2"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:corner_radius="10dp"
                app:solid_color="@color/green_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/blink"
                android:layout_marginTop="22dp"
                />

        <com.example.zls.widget.custom_view.shape_view.ShapeTextView
                android:id="@+id/messenger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="测试messager 2-->1"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:corner_radius="10dp"
                app:solid_color="@color/green_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messenger1"
                android:layout_marginTop="22dp"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>