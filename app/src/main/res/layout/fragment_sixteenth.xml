<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_little"
            >

        <ImageView
                android:id="@+id/test_drawable"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/test_drawable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginHorizontal="66dp"
                android:layout_marginTop="22dp"
                android:max="6"
                android:splitTrack="false"
                android:thumb="@drawable/ic_taideng"
                android:tickMark="@drawable/xiyiban"
                app:layout_constraintTop_toBottomOf="@id/test_drawable"
                />

        <SeekBar
                android:id="@+id/seek_bar_internal"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginHorizontal="66dp"
                android:layout_marginTop="33dp"
                android:max="6"
                android:splitTrack="false"
                android:thumb="@drawable/shujia"
                android:tickMark="@drawable/chuangtougui"
                app:layout_constraintTop_toBottomOf="@id/seek_bar"
                />

        <SeekBar
                android:id="@+id/seek_bar_internal_internal"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginHorizontal="66dp"
                android:layout_marginTop="33dp"
                android:max="6"
                android:splitTrack="false"
                android:thumb="@drawable/shujia"
                android:tickMark="@drawable/chuangtougui"
                app:layout_constraintTop_toBottomOf="@id/seek_bar_internal"
                />

        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginHorizontal="66dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/list_item_divider"
                app:layout_constraintTop_toBottomOf="@id/seek_bar_internal_internal"
                />

        <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginHorizontal="66dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/list_item_divider"
                app:layout_constraintTop_toBottomOf="@id/divider"
                android:text="hhasfhsdhfshjsdlfsdl"
                android:gravity="center"
                />

        <ImageView
                android:id="@+id/test_xml_triangle"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/ic_triangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text"
                />

        <ImageView
                android:id="@+id/test_half_ring"
                android:layout_width="166dp"
                android:layout_height="166dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/ic_half_ring"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/test_xml_triangle"
                android:background="@color/green_light"
                android:scaleType="centerCrop"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>